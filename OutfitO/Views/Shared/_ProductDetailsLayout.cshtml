@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>@ViewBag.Title - OutfitO</title>
	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

	@* <!-- Bootstrap --> *@
	@* <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css" />  *@
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<!-- Slick -->
	<link type="text/css" rel="stylesheet" href="/css/slick.css" />
	<link type="text/css" rel="stylesheet" href="/css/slick-theme.css" />

	<!-- nouislider -->
	<link type="text/css" rel="stylesheet" href="/css/nouislider.min.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

	<!-- Custom stylesheet -->
	<link type="text/css" rel="stylesheet" href="/css/style.css" />
</head>
<style>
	a, span, i {
		text-decoration: none;
	}

	.logo:hover {
		text-decoration: none;
	}

	.header-ctn {
		display: flex;
		flex-direction: row;
		padding: 15px 0px;
	}

	i:hover {
		text-decoration: none;
		color: #D10024;
	}

	html::-webkit-scrollbar {
		width: 9px;
		height: .5rem;
	}

	html::-webkit-scrollbar-track {
		background-color: transparent;
	}

	html::-webkit-scrollbar-thumb {
		background-image: linear-gradient(to bottom, #D10024 0%, #D10020 100%);
	}
</style>
<body>
	<!-- HEADER -->
	<div id="head">
		<partial name="_UserNavPartial">
	</div>
	<!-- /HEADER -->
	<!-- NAVIGATION -->
	<nav id="navigation">
		<!-- container -->
		<div class="container">
			<!-- responsive-nav -->
			<div id="responsive-nav">
				<!-- NAV -->
				<ul class="main-nav nav navbar-nav" style="flex-direction: row;padding: 10px;">
					<li><a asp-controller="Home" asp-action="Index">Home</a></li>
					<li><a asp-controller="Product" asp-action="Index">Products</a></li>
					<li><a asp-controller="Order" asp-action="History">Orders</a></li>
				</ul>
				<!-- /NAV -->
			</div>
			<!-- /responsive-nav -->
		</div>
		<!-- /container -->
	</nav>
	<div id="modal-placeholder"></div>
	<!-- /NAVIGATION -->
	<div class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">

				@RenderBody()
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /SECTION -->
	<!-- NEWSLETTER -->
	<!-- /NEWSLETTER -->
	<!-- FOOTER -->
	<footer id="footer">
		<!-- top footer -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-3 col-xs-6">
