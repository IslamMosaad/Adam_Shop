<script>
    var selectedCategories = [];
    function getCat(){
        selectedCategories = [];
        event.preventDefault();
        $('input[type="checkbox"]').each(function () {
            if ($(this).is(':checked')) {
                var categoryName = $(this).siblings('label').text().trim();
                selectedCategories.push(categoryName);
            }
        });
    }
    function Filter() {
        getCat();
        $.ajax({
            url: '/Product/Filter',
            method: 'POST',
            data: { Params: selectedCategories},
            success: function (result) {
                $("#FilteredProducts").html("");
                $("#FilteredProducts").html(result);
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
            }
        });
    }
    function pagination(pageNum) {
        getCat();
        $.ajax({
            url: '/Product/Filter',
            method: 'POST',
            data: { Params: selectedCategories, page: pageNum },
            success: function (result) {
               $("#FilteredProducts").html("");
                $("#FilteredProducts").html(result);
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
            }
        });
    }
    function addToCart(id) {
        if (id != "notAuthenticated") {
            $.ajax({
                url: '/Cart/AddToCart/' + id,
                success: function (result) {
                    $("#head").html("");
                    $("#head").html(result);
                    Swal.fire(
                        'Success!',
                        'Product Added Successfully!',
                        'success'
                    );
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        }
        else {
            window.location.href = "/User/login";
        }
    }
</script>
