@model OutfitO.ViewModels.UserVM

@{
    Layout = "_LoginAndRegisterHeaderLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">
    <title>Register</title>
</head>
<style>
    #secondForm {
        display: none;
    }

    .register-form {
        max-width: 100%;
        display: block;
        margin: auto;
        width: 100%;
    }

    .card-parent {
        width: 90%
    }

    .border-light-subtle {
        width: 100%;
    }

    .secondFormBtn{
        width:105%;
        
    }

    .signup-text {
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: #333;
    }

    .signup-link {
        text-decoration: none;
        font-weight: bold;
        font-size: 17px;
        margin-left: 5px;
        transition: all 0.3s ease-in-out;
    }

        .signup-link:hover {
            color: #D10024;
            text-decoration: none;
        }


            
</style>
<body>


    <section class="register-form p-3 p-md-4 p-xl-5">
        <div class="container registration-section">
            <div class="row justify-content-center">
                <div class="col-8 col-xxl-11 card-parent">
                    <div class="card border-light-subtle shadow-sm">
                        <div class="row g-0">
                            <div class="col-12 col-md-6">
                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="https://assets-v2.lottiefiles.com/a/6beb774c-1166-11ee-a6f1-4788c8724adf/E9TtaYgKZu.gif" alt="Welcome back you've been missed!">
                            </div>
                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5" id="formContainer">
                                        <div class="row">
                                            <div class="col-12">
                                            </div>
                                        </div>
                                        <form asp-action="Register" asp-controller="User" method="post" enctype="multipart/form-data">

                                            <div class="row gy-3 overflow-hidden" id="firstForm">
                                                <div class="col-md-6">
                                                    <label for="FirstName" asp-for="FirstName" class="form-label">First Name</label>
                                                    <input type="text" class="form-control" asp-for="FirstName" class="form-control" id="FirstName">
                                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                                </div>

                                                <div class="col-md-6">
                                                    <label for="Lastname" asp-for="Lastname" class="form-label">Last Name</label>
                                                    <input type="text" asp-for="Lastname" class="form-control" id="Lastname">
                                                    <span asp-validation-for="Lastname" class="text-danger"></span>
                                                </div>

                                                <div class="col-12">
                                                    <label for="image" asp-for="ProfileImage" class="form-label">Image</label>
                                                    <input type="file" asp-for="ProfileImage" class="form-control" id="image">
                                                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                                                </div>

                                                <div class="col-12">
                                                    <label for="phone" asp-for="PhoneNumber" class="form-label">Phone</label>
                                                    <input type="number" asp-for="PhoneNumber" class="form-control" id="phone">
                                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                </div>

                                                <div class="col-12">
                                                    <label for="gender"  asp-for="Gender" class="form-label">Gender</label>
                                                    <select class="form-select" asp-for="Gender" aria-label="Default select example" id="gender">
                                                        <option selected disabled>Choose From Here</option>
                                                        <option value="Male">Male</option>
                                                        <option value="Female">Female</option>
                                                    </select>
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-outline-primary btn-lg" type="button" style="padding:1px" id="nextBtn">Next</button>
                                                    </div>

                                                </div>
                                                <div class="col-12">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <p class="signup-text">Already Have An Account? <a href="/user/login" class="signup-link">Login</a></p>

                                                </div>
                                            </div>

                                            <div class="row gy-3 overflow-hidden" id="secondForm" style="display: none;">
                                                <div class="col-md-12">
                                                    <label for="inputEmail4" asp-for="Email" class="form-label">Email</label>
                                                    <input type="email" asp-for="Email" class="form-control" id="inputEmail4">
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-12">
                                                    <label for="inputPassword4" asp-for="Password" class="form-label">Password</label>
                                                    <input type="password" asp-for="Password" class="form-control" id="inputPassword4">
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-12">
                                                    <label for="inputPasswordconform" asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="inputPasswordconform">
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                                <div class="col-12">
                                                    <label for="inputAddress2" asp-for="Address" class="form-label">Address</label>
                                                    <input type="text" asp-for="Address" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                                                    <span asp-validation-for="Address" class="text-danger"></span>
                                                </div>

                                                <div class="row g-3 justify-content-center my-3">
                                                    <div class="col">
                                                        <button style="padding: 1px 23px;" class="btn btn-outline-primary secondFormBtn me-1  btn-lg" type="button" id="BackBtn">Back</button>

                                                    </div>
                                                    <div class="col">
                                                        <button style="padding: 1px 23px;" class="btn btn-outline-success secondFormBtn btn-lg" value="Create" id="SubmitBtn">Submit</button>

                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <br />




    @section Scripts {
